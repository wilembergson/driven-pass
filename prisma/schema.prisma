// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id Int @id @default(autoincrement())
  email String @unique
  password String
  Credentials Credentials[]
  Notes Note[]
  Cards Card[]
  Wifi Wifi[]

  @@map("users")
}

model Session {
  id Int @id @default(autoincrement())
  email String
  token String
  createdAt DateTime @default(now())

  @@map("sessions")
}

model Credentials{
  id Int @id @default(autoincrement())
  title String
  url String
  credentialUser String
  password String
  userId Int
  user User @relation(fields: [userId], references: [id])

  @@map("credentials")
}

model Note {
  id Int @id @default(autoincrement())
  title String
  annotation String
  userId Int
  user User @relation(fields: [userId], references: [id])

  @@map("notes")
}

model Card {
  id Int @id @default(autoincrement())
  number Int @unique
  name String
  securityCode Int
  expirationDate String
  password String
  isVirtual Boolean
  type String
  userId Int
  user User @relation(fields: [userId], references: [id])

  @@map("cards")
}

model Wifi{
  id Int @id @default(autoincrement())
  title String
  password String
  userId Int
  user User @relation(fields: [userId], references: [id])

  @@map("wifi")
}